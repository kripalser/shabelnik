---
import type { CollectionGroup } from '../types';

import { getSlug, getYearsRange } from '@utils';

export interface Props {
    item: CollectionGroup;
}

const { item } = Astro.props;
---

<style lang="scss">
    .item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: .5rem 0;
        font-weight: 700;
        color: inherit;
        text-decoration: none;

        &:hover {
            color: var(--color-accent);
        }
    }

    .number {
        font-size: 2rem;
        font-weight: 900;
        color: var(--color-accent);
    }
</style>

<a class="item" href={`/${item.collection}/#${getSlug(item.title)}`}>
    <span class="title">{item.title}<br>{`${getYearsRange(item.years)}`}</span>
    <span class="number">{item.items.length}</span>
</a>
