---
import ContentsItem from '@components/ContentsItem.astro';

import { links } from '@data/links';
import { collections } from '@utils';
---

<style lang="scss">
    .grid {
        height: 100%;
        margin: 2rem -1rem;

        @media (min-width: 992px) {
            display: grid;
            grid-template-columns: 2fr 2fr 1fr;
        }
    }

    .column {
        padding: 0 1rem;

        &:not(:last-child) {
            margin-bottom: 1.5rem;

            @media (min-width: 992px) {
                margin-bottom: 0;
                border-right: var(--width-divider) solid var(--color-divider);
            }
        }
    }

    .title {
        margin: 0 0 1rem;
        font-size: 1.5rem;
        font-weight: 700;
        text-transform: uppercase;

        @media (min-width: 992px) {
            margin: 0 0 2.5rem;
        }

        a {
            color: inherit;
            text-decoration: none;

            &:hover {
                color: var(--color-accent);
            }
        }
    }

    .list {
        padding: 0;
        margin: 0;
        list-style: none;

        &--grid {
            display: grid;
            grid-column-gap: 1rem;
            grid-template-columns: 1fr 1fr;
        }
    }

    .list-item {
        border-top: var(--width-divider) solid var(--color-divider);
    }
</style>

<div class="grid">
    <div class="column">
        <div class="section">
            <h2 class="title"><a href={links.nav.books.url}>Книги</a></h2>
            <ul class="list list--grid">
                {collections.books.grouped.map((group) => (
                    <li class="list-item">
                        <ContentsItem item={group} />
                    </li>
                ))}
            </ul>
        </div>
    </div>
    <div class="column">
        <div class="section">
            <h2 class="title"><a href={links.nav.magazines.url}>Журналы</a></h2>
            <ul class="list list--grid">
                {collections.magazines.grouped.map((item) => (
                    <li class="list-item">
                        <ContentsItem item={item} />
                    </li>
                ))}
            </ul>
        </div>
    </div>
    <div class="column">
        <div class="section">
            <h2 class="title"><a href={links.nav.filmstrips.url}>Диафильмы</a></h2>
            <ul class="list">
                {collections.filmstrips.grouped.map((item) => (
                    <li class="list-item">
                        <ContentsItem item={item} />
                    </li>
                ))}
            </ul>
        </div>
        <!--<div class="section">
            <h2 class="title">Пособия</h2>
        </div>-->
    </div>
</div>
